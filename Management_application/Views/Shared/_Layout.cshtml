<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        @if (User.IsInRole("leader"))
        {
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Management application", "Index", "ManagementApp", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Zarządzaj zajęciami", "AddClassView", "ManagementApp")</li>
                        <li>@Html.ActionLink("Oceniaj", "AddGradesView", "ManagementApp")</li>
                        <li>@Html.ActionLink("Przeglądaj pliki", "TeacherFileView", "ManagementApp")</li>
                        <li>@Html.ActionLink("Raport", "ReportView", "ManagementApp")</li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        }
        else
        {
            if (User.IsInRole("student"))
            {
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("Management application", "Index", "ManagementApp", new { area = "" }, new { @class = "navbar-brand" })
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Zajęcia", "StudentView", "ManagementApp")</li>
                            <li>@Html.ActionLink("Pliki", "StudentFileView", "ManagementApp")</li>
                        </ul>
                        @Html.Partial("_LoginPartial")
                    </div>
                </div>
            }
            else
            {
                if (User.IsInRole("admin"))
                {
                    <div class="container">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            @Html.ActionLink("Management application", "Index", "ManagementApp", new { area = "" }, new { @class = "navbar-brand" })
                        </div>
                        <div class="navbar-collapse collapse">
                            <ul class="nav navbar-nav">
                                <li>@Html.ActionLink("Zarządzaj rolami", "AssignRoleView", "ManagementApp")</li>
                            </ul>
                            @Html.Partial("_LoginPartial")
                        </div>
                    </div>
                }
                else
                {
                    <div class="container">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            @Html.ActionLink("Management application", "Index", "ManagementApp", new { area = "" }, new { @class = "navbar-brand" })
                        </div>
                        <div class="navbar-collapse collapse">
                            <ul class="nav navbar-nav">
                                <li>@Html.ActionLink("Home", "Index", "ManagementApp")</li>
                            </ul>
                            @Html.Partial("_LoginPartial")
                        </div>
                    </div>
                }
            }
        }
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
<script>

        rootUrl = '@Url.Content("~")'
</script>